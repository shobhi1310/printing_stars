#include<stdio.h>

void stariso(int a){
    for(int i=1;i<=a;i++){
        for(int k=a-i;k>=1;k--){
            printf(" ");
        }
        for(int j=1;j<=(2*i-1);j++){
            printf("*");
        }
        printf("\n");
    }
}

int main() {
    int n;
    scanf("%d",&n);
    stariso(n);
}
