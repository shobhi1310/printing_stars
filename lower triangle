#include<stdio.h>

void starlower(int a){
    for(int i=1;i<=a;i++){
        for(int k=a-i;k>0;k--){
            printf(" ");
        }
        for(int j=1;j<=i;j++){
            printf("*");
        }
        printf("\n");
        
    }
}

int main() {
    int n;
    scanf("%d",&n);
    starlower(n);
}
